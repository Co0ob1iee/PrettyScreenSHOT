<Window x:Class="PrettyScreenSHOT.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading Update" Height="200" Width="400" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White"
        ShowInTaskbar="True" ResizeMode="NoResize">
    
    <DockPanel Margin="20">
        <TextBlock DockPanel.Dock="Top" Text="Downloading update..." FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <StackPanel>
            <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Height="30" Margin="0,0,0,10"/>
            <TextBlock x:Name="ProgressText" Text="0%" HorizontalAlignment="Center" FontSize="14"/>
        </StackPanel>
        
        <Button DockPanel.Dock="Bottom" x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" 
                Background="#F44336" Foreground="White" Padding="10,5" Margin="0,20,0,0" HorizontalAlignment="Right"/>
    </DockPanel>
</Window>

