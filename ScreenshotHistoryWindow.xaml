<Window x:Class="PrettyScreenSHOT.ScreenshotHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screenshot History" Height="600" Width="700" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    
    <!-- Resources MUSZA BYC NA POCZATKU -->
    <Window.Resources>
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E53935"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C62828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="??" FontSize="32" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Historia Screenshotow" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Wszystkie zapisane screenshoty" FontSize="12" Foreground="#CCCCCC"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- History List -->
        <ScrollViewer DockPanel.Dock="Bottom">
            <ItemsControl x:Name="HistoryListBox" ItemsSource="{Binding}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#404040" BorderThickness="0,0,0,1" Margin="0" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Thumbnail -->
                                <Image Grid.Column="0" Source="{Binding Thumbnail}" Width="100" Height="75" 
                                       Stretch="UniformToFill" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                
                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Filename}" FontWeight="Bold" FontSize="13" Foreground="#FFFFFF"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm:ss'}" 
                                               FontSize="11" Foreground="#AAAAAA" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <!-- Delete Button -->
                                <Button Grid.Column="2" Click="OnDeleteClick" 
                                        Background="#F44336" Foreground="White" Padding="12,8" 
                                        VerticalAlignment="Center" Margin="15,0,0,0"
                                        Style="{StaticResource DeleteButton}">
                                    <TextBlock Text="??? Usun" FontSize="12" FontWeight="Bold"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
