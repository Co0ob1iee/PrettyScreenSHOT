<Window x:Class="PrettyScreenSHOT.ScreenshotHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PrettyScreenSHOT"
        Title="Screenshot History" Height="600" Width="700" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    
    <!-- Resources MUSZA BYC NA POCZATKU -->
    <Window.Resources>
        <!-- Converter dla Visibility -->
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E53935"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C62828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="??" FontSize="32" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="TitleText" Text="Screenshot History" FontSize="24" FontWeight="Bold"/>
                        <TextBlock x:Name="SubtitleText" Text="All saved screenshots" FontSize="12" Foreground="#CCCCCC"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Search and Filter -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Search Box -->
                    <TextBox x:Name="SearchTextBox" Grid.Column="0" 
                            Background="#2D2D2D" Foreground="White" BorderBrush="#404040" 
                            Padding="10,8" Margin="0,0,10,0"
                            TextChanged="OnSearchTextChanged"/>
                    
                    <!-- Category Filter -->
                    <ComboBox x:Name="CategoryComboBox" Grid.Column="1" 
                             Background="#2D2D2D" Foreground="White" BorderBrush="#404040"
                             Padding="8" Margin="0,0,10,0"
                             SelectionChanged="OnCategoryChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <!-- Clear Filters -->
                    <Button x:Name="ClearFiltersButton" Grid.Column="2" 
                           Content="Clear" Background="#FF9800" Foreground="White" 
                           Padding="12,6" Click="OnClearFiltersClick"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- History List -->
        <ScrollViewer DockPanel.Dock="Bottom">
            <ItemsControl x:Name="HistoryListBox" ItemsSource="{Binding}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#404040" BorderThickness="0,0,0,1" Margin="0" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Thumbnail -->
                                <Image Grid.Column="0" Source="{Binding Thumbnail}" Width="100" Height="75" 
                                       Stretch="UniformToFill" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                
                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Filename}" FontWeight="Bold" FontSize="13" Foreground="#FFFFFF"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm:ss'}" 
                                               FontSize="11" Foreground="#AAAAAA" Margin="0,5,0,0"/>
                                    <!-- Cloud URL -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Visibility="{Binding CloudUrl, Converter={StaticResource NullToVisibilityConverter}}">
                                        <TextBlock Text="â˜" FontSize="12" Foreground="#60A5FA" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding CloudProvider}" FontSize="10" Foreground="#AAAAAA" Margin="0,0,5,0"/>
                                        <Button Click="OnCloudUrlClick" Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                                            <TextBlock Text="{Binding CloudUrl}" FontSize="10" Foreground="#60A5FA" TextDecorations="Underline" 
                                                       TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                                    <!-- Upload Button (if not uploaded) -->
                                    <Button Click="OnUploadClick" 
                                            Background="#9C27B0" Foreground="White" Padding="10,6" Margin="0,0,5,0"
                                            Visibility="{Binding CloudUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                                        <TextBlock Text="Upload" FontSize="11" FontWeight="Bold"/>
                                    </Button>
                                    <!-- Delete Button -->
                                    <Button Click="OnDeleteClick" 
                                        Background="#F44336" Foreground="White" Padding="12,8" 
                                        VerticalAlignment="Center" Margin="0,0,0,0"
                                        Style="{StaticResource DeleteButton}">
                                        <TextBlock x:Name="DeleteText" Text="Delete" FontSize="12" FontWeight="Bold"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
