<Window x:Class="PrettyScreenSHOT.ScreenshotEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screenshot Editor" Height="700" Width="1000" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    
    <!-- Resources MUSZA BYC NA POCZATKU -->
    <Window.Resources>
        <Style x:Key="ToolButton" TargetType="Button">
            <Setter Property="Background" Value="#3F3F3F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="2" 
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4F4F4F"/>
                                <Setter Property="BorderBrush" Value="#60A5FA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#60A5FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Toolbar na gorze -->
        <Border DockPanel.Dock="Top" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Drawing Tools -->
                <TextBlock Text="NARZEDZIA:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12" FontWeight="Bold" Foreground="#AAAAAA"/>
                
                <Button Tag="marker" Click="OnToolButtonClick" Style="{StaticResource ToolButton}" ToolTip="Marker - Rysuj">
                    <Image Source="/Assets/Icons/Tools/marker.png" Stretch="Uniform" Width="24" Height="24"/>
                </Button>

                <Button Tag="rectangle" Click="OnToolButtonClick" Style="{StaticResource ToolButton}" ToolTip="Prostokąt">
                    <Image Source="/Assets/Icons/Tools/zaznaczenie_prostokat.png" Stretch="Uniform" Width="24" Height="24"/>
                </Button>

                <Button Tag="arrow" Click="OnToolButtonClick" Style="{StaticResource ToolButton}" ToolTip="Strzałka">
                    <Image Source="/Assets/Icons/Tools/icon_arrow.png" Stretch="Uniform" Width="24" Height="24"/>
                </Button>

                <Button Tag="blur" Click="OnToolButtonClick" Style="{StaticResource ToolButton}" ToolTip="Blur - Zamazywanie">
                    <Image Source="/Assets/Icons/Tools/icon_blur.png" Stretch="Uniform" Width="24" Height="24"/>
                </Button>

                <Button Tag="text" Click="OnToolButtonClick" Style="{StaticResource ToolButton}" ToolTip="Tekst">
                    <Image Source="/Assets/Icons/Tools/icon_text.png" Stretch="Uniform" Width="24" Height="24"/>
                </Button>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0" Background="#404040"/>
                
                <!-- Color Picker -->
                <TextBlock Text="KOLOR:" VerticalAlignment="Center" Margin="10,0,10,0" FontSize="11" FontWeight="Bold" Foreground="#AAAAAA"/>
                <Button x:Name="ColorButton" Click="OnColorPickerClick" Width="40" Height="35" Background="#FF0000" ToolTip="Zmien kolor" 
                        Style="{StaticResource ToolButton}" Padding="0" Margin="5"/>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0" Background="#404040"/>
                
                <!-- Size Slider -->
                <TextBlock Text="GRUBOSC:" VerticalAlignment="Center" Margin="10,0,10,0" FontSize="11" FontWeight="Bold" Foreground="#AAAAAA"/>
                <Slider x:Name="SizeSlider" Width="100" Minimum="1" Maximum="30" Value="3" VerticalAlignment="Center" 
                        Background="#3F3F3F" Foreground="#60A5FA" ValueChanged="SizeSlider_ValueChanged"/>
                <TextBlock x:Name="SizeLabel" Text="3px" VerticalAlignment="Center" Margin="5,0,10,0" FontSize="11" Foreground="#AAAAAA"/>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0" Background="#404040"/>
                
                <!-- Action Buttons -->
                <Button Click="OnClearClick" Background="#FF9800" Foreground="White" Padding="12,8" Margin="5" ToolTip="Wyczyść wszystko">
                    <TextBlock Text="WYCZYŚĆ" FontSize="11" FontWeight="Bold"/>
                </Button>

                <Button Click="OnUndoClick" Background="#2196F3" Foreground="White" Padding="12,8" Margin="5" ToolTip="Cofnij ostatnią akcję">
                    <TextBlock Text="COFNIJ" FontSize="11" FontWeight="Bold"/>
                </Button>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0" Background="#404040"/>
                
                <Button Click="OnUploadClick" Background="#9C27B0" Foreground="White" Padding="15,8" Margin="5" ToolTip="Prześlij do chmury">
                    <TextBlock Text="CHMURA" FontSize="12" FontWeight="Bold"/>
                </Button>

                <Button Click="OnSaveClick" Background="#4CAF50" Foreground="White" Padding="15,8" Margin="5" ToolTip="Zapisz screenshot">
                    <TextBlock Text="ZAPISZ" FontSize="12" FontWeight="Bold"/>
                </Button>

                <Button Click="OnCancelClick" Background="#F44336" Foreground="White" Padding="15,8" Margin="5" ToolTip="Anuluj bez zapisu">
                    <TextBlock Text="ANULUJ" FontSize="12" FontWeight="Bold"/>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Canvas -->
        <Canvas x:Name="EditorCanvas" DockPanel.Dock="Bottom" Background="Black" 
                MouseDown="OnEditorCanvasMouseDown" MouseMove="OnEditorCanvasMouseMove" MouseUp="OnEditorCanvasMouseUp"/>
    </DockPanel>
</Window>
