<Window x:Class="PrettyScreenSHOT.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" Height="500" Width="600" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White"
        ShowInTaskbar="True" ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <DockPanel Margin="20">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ”„ Update Available" FontSize="24" FontWeight="Bold"/>
                <TextBlock x:Name="SubtitleText" Text="A new version is available!" FontSize="12" Foreground="#CCCCCC" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Version Info -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Current Version:" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" x:Name="CurrentVersionText" Text="1.0.0"/>
                </Grid>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="New Version:" FontWeight="Bold" Foreground="#60A5FA"/>
                    <TextBlock Grid.Column="1" x:Name="NewVersionText" Text="1.1.0" FontSize="16" FontWeight="Bold" Foreground="#60A5FA"/>
                </Grid>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Release Date:" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" x:Name="ReleaseDateText" Text="2024-01-15"/>
                </Grid>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="File Size:" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" x:Name="FileSizeText" Text="15.2 MB"/>
                </Grid>
                
                <!-- Release Notes -->
                <TextBlock Text="Release Notes:" FontWeight="Bold" FontSize="14" Margin="0,10,0,5"/>
                <Border Background="#2D2D2D" BorderBrush="#404040" BorderThickness="1" Padding="10" MaxHeight="200">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="ReleaseNotesText" TextWrapping="Wrap" Text="Loading release notes..."/>
                    </ScrollViewer>
                </Border>
                
                <!-- Download Progress (hidden by default) -->
                <StackPanel x:Name="ProgressPanel" Visibility="Collapsed" Margin="0,15,0,0">
                    <TextBlock Text="Downloading update..." FontWeight="Bold" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="DownloadProgressBar" Height="25" Margin="0,0,0,5"/>
                    <TextBlock x:Name="ProgressText" Text="0%" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <Border DockPanel.Dock="Bottom" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="15" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SkipButton" Content="Skip This Version" Click="SkipButton_Click" 
                        Background="#9E9E9E" Width="150"/>
                <Button x:Name="LaterButton" Content="Later" Click="LaterButton_Click" 
                        Background="#9E9E9E" Width="100" Margin="10,0,0,0"/>
                <Button x:Name="DownloadButton" Content="Download Now" Click="DownloadButton_Click" 
                        Background="#4CAF50" Width="150" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
