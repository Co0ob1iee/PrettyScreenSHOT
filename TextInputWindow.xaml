<Window x:Class="PrettyScreenSHOT.TextInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Tekst" Height="250" Width="400" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White"
        ShowInTaskbar="False" WindowStyle="ToolWindow" ResizeMode="NoResize">
    
    <StackPanel Margin="20" VerticalAlignment="Stretch">
        
        <!-- Text Input -->
        <TextBlock x:Name="TextLabel" Text="Text:" Foreground="#AAAAAA" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="TextInputControl" Background="#2D2D2D" Foreground="White" 
                 Padding="10" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                 FontSize="14" BorderBrush="#404040" BorderThickness="1"/>
        
        <!-- Font Size -->
        <TextBlock x:Name="FontSizeTextLabel" Text="Font Size:" Foreground="#AAAAAA" FontSize="12" FontWeight="Bold" Margin="0,15,0,5"/>
        <StackPanel Orientation="Horizontal">
            <Slider x:Name="FontSizeSlider" Width="250" Minimum="10" Maximum="72" Value="24" 
                    Background="#3F3F3F" Foreground="#60A5FA" VerticalAlignment="Center"/>
            <TextBlock x:Name="FontSizeValueLabel" Text="24" Foreground="#AAAAAA" Margin="10,0,0,0" 
                       VerticalAlignment="Center" FontSize="12"/>
        </StackPanel>
        
        <!-- Preview -->
        <TextBlock x:Name="PreviewLabel" Text="Preview:" Foreground="#AAAAAA" FontSize="12" FontWeight="Bold" Margin="0,15,0,5"/>
        <TextBlock x:Name="PreviewText" Text="Sample Text" Foreground="#60A5FA" 
                   Height="40" VerticalAlignment="Top" TextWrapping="Wrap"/>
        
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Click="OnOkClick" Background="#4CAF50" Foreground="White" 
                    Padding="20,10" Margin="5" Width="100">
                <TextBlock Text="OK" FontWeight="Bold"/>
            </Button>
            <Button Click="OnCancelClick" Background="#F44336" Foreground="White" 
                    Padding="20,10" Margin="5" Width="100">
                <TextBlock Text="Anuluj" FontWeight="Bold"/>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
