<ui:FluentWindow x:Class="PrettyScreenSHOT.TextInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Dodaj Tekst"
        Height="720"
        Width="540"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title bar -->
            <RowDefinition Height="*"/>    <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="Dodaj Tekst"
                     Icon="pack://application:,,,/app.ico"
                     ShowMaximize="False"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" Spacing="16">

                <!-- Text Input Card -->
                <ui:Card>
                    <StackPanel Spacing="8">
                        <TextBlock x:Name="TextLabel"
                                   Text="Text:"
                                   FontWeight="SemiBold"/>
                        <ui:TextBox x:Name="TextInputControl"
                                    Height="80"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    TextChanged="TextInputControl_TextChanged"/>
                    </StackPanel>
                </ui:Card>

                <!-- Font Settings Card -->
                <ui:Card>
                    <StackPanel Spacing="16">
                        <TextBlock Text="Ustawienia czcionki"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>

                        <!-- Font Family -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Czcionka:" FontWeight="Medium"/>
                            <ComboBox x:Name="FontFamilyComboBox"
                                      SelectionChanged="FontFamilyComboBox_SelectionChanged"/>
                        </StackPanel>

                        <!-- Font Size -->
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="FontSizeTextLabel"
                                       Text="Rozmiar czcionki:"
                                       FontWeight="Medium"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="FontSizeSlider"
                                        Grid.Column="0"
                                        Minimum="8"
                                        Maximum="120"
                                        Value="24"
                                        Margin="0,0,12,0"
                                        ValueChanged="FontSizeSlider_ValueChanged"/>
                                <TextBlock x:Name="FontSizeValueLabel"
                                           Grid.Column="1"
                                           Text="24"
                                           Width="40"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Text Alignment -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Wyrównanie:" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <RadioButton x:Name="AlignLeftRadio"
                                             Content="Lewo"
                                             GroupName="Alignment"
                                             IsChecked="True"
                                             Checked="TextAlignment_Changed"/>
                                <RadioButton x:Name="AlignCenterRadio"
                                             Content="Środek"
                                             GroupName="Alignment"
                                             Checked="TextAlignment_Changed"/>
                                <RadioButton x:Name="AlignRightRadio"
                                             Content="Prawo"
                                             GroupName="Alignment"
                                             Checked="TextAlignment_Changed"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Text Style Options -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Styl tekstu:" FontWeight="Medium"/>
                            <WrapPanel Orientation="Horizontal">
                                <CheckBox x:Name="BoldCheckBox"
                                          Content="Pogrubiony"
                                          Margin="0,0,16,8"
                                          Checked="StyleCheckBox_Checked"
                                          Unchecked="StyleCheckBox_Checked"/>
                                <CheckBox x:Name="ItalicCheckBox"
                                          Content="Kursywa"
                                          Margin="0,0,16,8"
                                          Checked="StyleCheckBox_Checked"
                                          Unchecked="StyleCheckBox_Checked"/>
                                <CheckBox x:Name="UnderlineCheckBox"
                                          Content="Podkreślenie"
                                          Margin="0,0,16,8"
                                          Checked="StyleCheckBox_Checked"
                                          Unchecked="StyleCheckBox_Checked"/>
                                <CheckBox x:Name="StrikethroughCheckBox"
                                          Content="Przekreślenie"
                                          Margin="0,0,16,8"
                                          Checked="StyleCheckBox_Checked"
                                          Unchecked="StyleCheckBox_Checked"/>
                            </WrapPanel>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Color Settings Card -->
                <ui:Card>
                    <StackPanel Spacing="16">
                        <TextBlock Text="Kolory"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>

                        <!-- Text Color -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Kolor tekstu:" FontWeight="Medium"/>
                            <ComboBox x:Name="ColorComboBox"
                                      SelectedIndex="0"
                                      SelectionChanged="ColorComboBox_SelectionChanged">
                                <ComboBoxItem Content="Czerwony" Background="Red" Foreground="White"/>
                                <ComboBoxItem Content="Zielony" Background="Green" Foreground="White"/>
                                <ComboBoxItem Content="Niebieski" Background="Blue" Foreground="White"/>
                                <ComboBoxItem Content="Żółty" Background="Yellow" Foreground="Black"/>
                                <ComboBoxItem Content="Fioletowy" Background="Purple" Foreground="White"/>
                                <ComboBoxItem Content="Pomarańczowy" Background="Orange" Foreground="White"/>
                                <ComboBoxItem Content="Czarny" Background="Black" Foreground="White"/>
                                <ComboBoxItem Content="Biały" Background="White" Foreground="Black"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Background Color -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Kolor tła (opcjonalnie):" FontWeight="Medium"/>
                            <ComboBox x:Name="BackgroundColorComboBox"
                                      SelectedIndex="0"
                                      SelectionChanged="BackgroundColorComboBox_SelectionChanged">
                                <ComboBoxItem Content="Brak"/>
                                <ComboBoxItem Content="Biały" Background="White" Foreground="Black"/>
                                <ComboBoxItem Content="Czarny" Background="Black" Foreground="White"/>
                                <ComboBoxItem Content="Żółty" Background="Yellow" Foreground="Black"/>
                                <ComboBoxItem Content="Niebieski" Background="LightBlue" Foreground="Black"/>
                                <ComboBoxItem Content="Zielony" Background="LightGreen" Foreground="Black"/>
                                <ComboBoxItem Content="Różowy" Background="Pink" Foreground="Black"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

                <!-- Stroke Settings Card -->
                <ui:Card>
                    <StackPanel Spacing="16">
                        <TextBlock Text="Obramowanie"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Stroke Color -->
                            <StackPanel Grid.Column="0" Spacing="8" Margin="0,0,12,0">
                                <TextBlock Text="Kolor:" FontWeight="Medium"/>
                                <ComboBox x:Name="StrokeColorComboBox"
                                          SelectedIndex="0"
                                          SelectionChanged="StrokeColorComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Brak"/>
                                    <ComboBoxItem Content="Czarny" Background="Black" Foreground="White"/>
                                    <ComboBoxItem Content="Biały" Background="White" Foreground="Black"/>
                                    <ComboBoxItem Content="Szary" Background="Gray" Foreground="White"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Stroke Thickness -->
                            <StackPanel Grid.Column="1" Spacing="8" MinWidth="140">
                                <TextBlock Text="Grubość:" FontWeight="Medium"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="StrokeThicknessSlider"
                                            Grid.Column="0"
                                            Minimum="0"
                                            Maximum="5"
                                            Value="0"
                                            Margin="0,0,8,0"
                                            ValueChanged="StrokeThicknessSlider_ValueChanged"/>
                                    <TextBlock x:Name="StrokeThicknessLabel"
                                               Grid.Column="1"
                                               Text="0"
                                               Width="20"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Preview Card -->
                <ui:Card>
                    <StackPanel Spacing="8">
                        <TextBlock x:Name="PreviewLabel"
                                   Text="Podgląd:"
                                   FontWeight="SemiBold"/>
                        <Border Height="60"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
                            <TextBlock x:Name="PreviewText"
                                       Text="Przykładowy tekst"
                                       Foreground="#4CAF50"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontSize="16"/>
                        </Border>
                    </StackPanel>
                </ui:Card>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="8"
                            Margin="0,8,0,0">
                    <ui:Button x:Name="OkButton"
                               Content="OK"
                               Click="OnOkClick"
                               Appearance="Primary"
                               Icon="Checkmark24"
                               MinWidth="100"/>
                    <ui:Button x:Name="CancelButton"
                               Content="Anuluj"
                               Click="OnCancelClick"
                               Icon="Dismiss24"
                               MinWidth="100"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
