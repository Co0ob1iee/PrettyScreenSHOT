<ui:FluentWindow x:Class="PrettyScreenSHOT.Views.Dialogs.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:helpers="clr-namespace:PrettyScreenSHOT.Helpers"
        Title="Color Picker"
        Height="350"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title bar -->
            <RowDefinition Height="*"/>    <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="Color Picker"
                     Icon="pack://application:,,,/app.ico"
                     ShowMaximize="False"/>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Color Picker Card -->
            <ui:Card Grid.Row="0">
                <StackPanel helpers:StackPanelHelper.Spacing="16">
                    <!-- Color Preview -->
                    <StackPanel helpers:StackPanelHelper.Spacing="8">
                        <TextBlock Text="Preview:"
                                   FontWeight="SemiBold"/>
                        <Border x:Name="ColorPreview"
                                Height="60"
                                Background="Red"
                                BorderBrush="{DynamicResource ControlStrongStrokeColorDefaultBrush}"
                                BorderThickness="2"
                                CornerRadius="4"/>
                    </StackPanel>

                    <!-- Red Slider -->
                    <StackPanel helpers:StackPanelHelper.Spacing="8">
                        <TextBlock>
                            <Run Text="Red: " FontWeight="SemiBold"/>
                            <Run x:Name="RedValueText" Text="255"/>
                        </TextBlock>
                        <Slider x:Name="RedSlider"
                                Minimum="0"
                                Maximum="255"
                                Value="255"
                                ValueChanged="OnColorChanged"/>
                    </StackPanel>

                    <!-- Green Slider -->
                    <StackPanel helpers:StackPanelHelper.Spacing="8">
                        <TextBlock>
                            <Run Text="Green: " FontWeight="SemiBold"/>
                            <Run x:Name="GreenValueText" Text="0"/>
                        </TextBlock>
                        <Slider x:Name="GreenSlider"
                                Minimum="0"
                                Maximum="255"
                                Value="0"
                                ValueChanged="OnColorChanged"/>
                    </StackPanel>

                    <!-- Blue Slider -->
                    <StackPanel helpers:StackPanelHelper.Spacing="8">
                        <TextBlock>
                            <Run Text="Blue: " FontWeight="SemiBold"/>
                            <Run x:Name="BlueValueText" Text="0"/>
                        </TextBlock>
                        <Slider x:Name="BlueSlider"
                                Minimum="0"
                                Maximum="255"
                                Value="0"
                                ValueChanged="OnColorChanged"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        helpers:StackPanelHelper.Spacing="8"
                        Margin="0,16,0,0">
                <ui:Button x:Name="CancelButton"
                           Content="Cancel"
                           Click="OnCancelClick"
                           Icon="Dismiss24"
                           MinWidth="100"/>
                <ui:Button x:Name="OkButton"
                           Content="OK"
                           Click="OnOkClick"
                           Appearance="Primary"
                           Icon="Checkmark24"
                           MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
