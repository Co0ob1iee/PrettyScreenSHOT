<Window x:Class="PrettyScreenSHOT.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="600" Width="700" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    
    <DockPanel Margin="20">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock x:Name="TitleText" Text="{Binding Title}" FontSize="24" FontWeight="Bold"/>
                <TextBlock x:Name="SubtitleText" Text="Configure application settings" FontSize="12" Foreground="#CCCCCC" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Language -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="LanguageLabel" Text="Language:" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" x:Name="LanguageComboBox" SelectionChanged="LanguageComboBox_SelectionChanged"/>
                </Grid>
                
                <!-- Save Path -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="SavePathLabel" Text="Save Path:" FontWeight="Bold"/>
                    <TextBox Grid.Column="1" x:Name="SavePathTextBox" Margin="0,0,10,0"/>
                    <Button Grid.Column="2" x:Name="BrowseButton" Content="Browse..." Click="BrowseButton_Click" 
                            Background="#2196F3" Width="100"/>
                </Grid>
                
                <!-- Hotkey -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="HotkeyLabel" Text="Hotkey:" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" x:Name="HotkeyComboBox"/>
                </Grid>
                
                <!-- Image Format -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="ImageFormatLabel" Text="Image Format:" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" x:Name="ImageFormatComboBox"/>
                </Grid>
                
                <!-- Image Quality -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="ImageQualityLabel" Text="Image Quality:" FontWeight="Bold"/>
                    <Slider Grid.Column="1" x:Name="QualitySlider" Minimum="10" Maximum="100" Value="90" 
                            Margin="0,0,10,0" VerticalAlignment="Center" ValueChanged="QualitySlider_ValueChanged"/>
                    <TextBlock Grid.Column="2" x:Name="QualityLabel" Text="90%" MinWidth="50"/>
                </Grid>
                
                <!-- Options -->
                <StackPanel Margin="0,10,0,15">
                    <CheckBox x:Name="AutoSaveCheckBox" Content="Auto Save" Margin="0,0,0,10"/>
                    <CheckBox x:Name="CopyToClipboardCheckBox" Content="Copy to Clipboard" Margin="0,0,0,10"/>
                    <CheckBox x:Name="ShowNotificationsCheckBox" Content="Show Notifications" Margin="0,0,0,10"/>
                    <CheckBox x:Name="AutoUploadCheckBox" Content="Auto Upload" Margin="0,0,0,10"/>
                </StackPanel>
                
                <!-- Theme -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="ThemeLabel" Text="Theme:" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" x:Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <Border DockPanel.Dock="Bottom" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="15" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ResetButton" Content="Reset to Defaults" Click="ResetButton_Click" 
                        Background="#FF9800" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" 
                        Background="#F44336" Margin="0,0,10,0"/>
                <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" 
                        Background="#4CAF50"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>

