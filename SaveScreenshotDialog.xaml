<Window x:Class="PrettyScreenSHOT.SaveScreenshotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Screenshot" Height="400" Width="500" WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" Foreground="White"
        ShowInTaskbar="False" WindowStyle="ToolWindow" ResizeMode="NoResize">
    
    <StackPanel Margin="20">
        <!-- Category -->
        <TextBlock x:Name="CategoryLabel" Text="Category:" Foreground="#AAAAAA" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="CategoryComboBox" Background="#2D2D2D" Foreground="White" BorderBrush="#404040"
                 Padding="8" Margin="0,0,0,15" IsEditable="True">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <!-- Tags -->
        <TextBlock x:Name="TagsLabel" Text="Tags (comma separated):" Foreground="#AAAAAA" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="TagsTextBox" Background="#2D2D2D" Foreground="White" BorderBrush="#404040"
                 Padding="10,8" Margin="0,0,0,15" TextWrapping="Wrap"
                 Tag="e.g., work, important, bug"/>
        
        <!-- Notes -->
        <TextBlock x:Name="NotesLabel" Text="Notes:" Foreground="#AAAAAA" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="NotesTextBox" Background="#2D2D2D" Foreground="White" BorderBrush="#404040"
                 Padding="10,8" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                 Margin="0,0,0,20"/>
        
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Click="OnCancelClick" Background="#F44336" Foreground="White" 
                    Padding="20,10" Margin="5" Width="100">
                <TextBlock Text="Cancel" FontWeight="Bold"/>
            </Button>
            <Button x:Name="SaveButton" Click="OnSaveClick" Background="#4CAF50" Foreground="White" 
                    Padding="20,10" Margin="5" Width="100">
                <TextBlock Text="Save" FontWeight="Bold"/>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>

