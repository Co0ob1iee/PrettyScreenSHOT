<ui:FluentWindow x:Class="PrettyScreenSHOT.UpdateNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Update Available"
        Height="450"
        Width="520"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title bar -->
            <RowDefinition Height="*"/>    <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="Update Available"
                     Icon="pack://application:,,,/app.ico"
                     ShowMaximize="False"/>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,12,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Content -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16">
                    <TextBlock x:Name="VersionText"
                               Text="Version 1.0.0 is now available"
                               FontSize="14"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                    <!-- Release Notes Card -->
                    <ui:Card Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="What's New:"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="ReleaseNotesText"
                                       TextWrapping="Wrap"
                                       Text="Loading release notes..."
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </ui:Card>

                    <!-- Update Info Card -->
                    <ui:Card Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="File Size:"
                                       Margin="0,0,12,8"/>
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       x:Name="FileSizeText"
                                       Text="-"
                                       Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Published:"
                                       Margin="0,0,12,0"/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       x:Name="PublishedText"
                                       Text="-"/>
                        </Grid>
                    </ui:Card>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Spacing="8" Margin="0,16,0,0">
                <!-- Primary Actions -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="8">
                    <ui:Button x:Name="UpdateNowButton"
                               Content="Update Now"
                               Click="UpdateNowButton_Click"
                               Icon="ArrowDownload24"
                               Appearance="Primary"
                               MinWidth="150"/>
                    <ui:Button x:Name="LaterButton"
                               Content="Later"
                               Click="LaterButton_Click"
                               Icon="Clock24"
                               MinWidth="100"/>
                </StackPanel>

                <!-- Secondary Actions -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="8">
                    <ui:Button x:Name="SkipVersionButton"
                               Content="Skip This Version"
                               Click="SkipVersionButton_Click"
                               Icon="DismissCircle24"
                               MinWidth="150"/>
                    <ui:Button x:Name="ViewOnGitHubButton"
                               Content="View on GitHub"
                               Click="ViewOnGitHubButton_Click"
                               Icon="Open24"
                               MinWidth="150"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
