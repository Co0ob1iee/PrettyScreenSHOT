<Window x:Class="PrettyScreenSHOT.UpdateNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" Height="400" Width="500" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White"
        ShowInTaskbar="True" ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <DockPanel Margin="20">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸŽ‰ Update Available!" FontSize="24" FontWeight="Bold" Foreground="#60A5FA"/>
                <TextBlock x:Name="VersionText" Text="Version 1.0.0 is now available" FontSize="14" Foreground="#CCCCCC" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="What's New:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="ReleaseNotesText" TextWrapping="Wrap" Text="Loading release notes..." 
                          Foreground="#CCCCCC" Margin="0,0,0,20"/>
                
                <!-- Update Info -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="File Size:" FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="FileSizeText" Text="-" Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Published:" FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PublishedText" Text="-" Margin="0,0,0,5"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <Border DockPanel.Dock="Bottom" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="15" Margin="0,20,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <Button x:Name="UpdateNowButton" Content="Update Now" Click="UpdateNowButton_Click" 
                            Background="#4CAF50" Width="150"/>
                    <Button x:Name="LaterButton" Content="Later" Click="LaterButton_Click" 
                            Background="#9E9E9E" Width="100" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="SkipVersionButton" Content="Skip This Version" Click="SkipVersionButton_Click" 
                            Background="Transparent" BorderBrush="#404040" BorderThickness="1" Width="150"/>
                    <Button x:Name="ViewOnGitHubButton" Content="View on GitHub" Click="ViewOnGitHubButton_Click" 
                            Background="Transparent" BorderBrush="#404040" BorderThickness="1" Width="150" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>

